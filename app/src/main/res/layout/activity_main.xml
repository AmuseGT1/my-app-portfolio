<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:weightSum="1"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="My Nanodegree Apps!"
            android:gravity="center"
            android:textAlignment="gravity"
            android:id="@+id/titleTextView"
            android:layout_weight="0.14"
            android:background="#ffff0400"
            android:textStyle="bold"
            android:textSize="26dp"
            android:textColor="#ffffffff" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="SPOTIFY STREAMER"
            android:id="@+id/spotifyButton"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.04"
            android:background="#ff0017ff"
            android:textColor="#ffffffff"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:onClick="spotifyStreamer" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="SCORES APP"
            android:id="@+id/scoresButton"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.04"
            android:background="#ff0017ff"
            android:textColor="#ffffffff"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:onClick="scoresApp" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="LIBRARY APP"
            android:id="@+id/libraryButton"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.04"
            android:background="#ff0017ff"
            android:textColor="#ffffffff"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:onClick="libraryApp" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="BUILD IT BIGGER"
            android:id="@+id/buildItButton"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.04"
            android:background="#ff0017ff"
            android:textColor="#ffffffff"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:onClick="buildItBigger" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="XYZ READER"
            android:id="@+id/xyzReaderButton"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.04"
            android:background="#ff0017ff"
            android:textColor="#ffffffff"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:onClick="xyzReader" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="CAPSTONE: MY OWN APP"
            android:id="@+id/capstoneButton"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.04"
            android:background="#ffff2432"
            android:textColor="#ffffffff"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:onClick="capstoneApp" />
    </LinearLayout>
</RelativeLayout>
